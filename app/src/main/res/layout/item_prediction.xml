<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/camera_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID камеры"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/prediction_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время предсказания"/>

        <TextView
            android:id="@+id/deer_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лосей: "/>

        <TextView
            android:id="@+id/bear_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Медведей: "/>

        <TextView
            android:id="@+id/hog_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кабанов: "/>

        <TextView
            android:id="@+id/lynx_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рысей: "/>

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>